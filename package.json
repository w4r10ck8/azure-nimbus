{
  "name": "azure-nimbus",
  "version": "1.0.0",
  "description": "Azure Nimbus CLI - Magical Azure DevOps reporting and cloud resource management",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "azure-nimbus": "dist/index.js"
  },
  "scripts": {
    "build": "bun run tsc",
    "dev": "bun run --watch src/index.ts",
    "start": "bun run build && node dist/index.js",
    "clean": "rm -rf dist",
    "prebuild": "bun run clean",
    "postbuild": "chmod +x dist/index.js"
  },
  "keywords": [
    "azure",
    "nimbus",
    "cli",
    "devops",
    "reporting",
    "cloud",
    "build-reports"
  ],
  "author": "w4r10ck",
  "license": "MIT",
  "devDependencies": {
    "@types/cli-progress": "^3.11.6",
    "@types/inquirer": "^9.0.9",
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@azure/identity": "^4.0.0",
    "@azure/arm-resources": "^5.0.0",
    "@azure/arm-subscriptions": "^5.0.0",
    "commander": "^11.0.0",
    "chalk": "^5.0.0",
    "ora": "^7.0.0",
    "cli-progress": "^3.12.0",
    "inquirer": "^9.0.0"
  }
}
